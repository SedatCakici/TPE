package DeHsMannheimSS17TPEGrp01Übung2;

import java.util.Scanner;

public class Kunden {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		System.out.println("Account erstellen: ... Name und Nachname eingaben bitte");
		String kunde = s.nextLine();
		// System.out.println("was möchten sie anlegen");
		System.out.println("1: Auslesen der Liste aller Vermogenswerte");
		System.out.println("2: Auslesen der Gesamtinvestition, die in dem Portfolio steckt");
		System.out.println("3: Auslesen des aktuellen Zeitwertes des Portfolios");
		System.out.println("4: Auslesen des aktuellen Gewinns bzw. Verlusts des Portfolios");
		System.out.println("5: Beenden");
		byte eingabe = s.nextByte();

		while (eingabe != 10) {
			System.out.println("1: Auslesen der Liste aller Vermogenswerte");
			System.out.println("2: Auslesen der Gesamtinvestition, die in dem Portfolio steckt");
			System.out.println("3: Auslesen des aktuellen Zeitwertes des Portfolios");
			System.out.println("4: Auslesen des aktuellen Gewinns bzw. Verlusts des Portfolios");
			System.out.println("5: Beenden");
			switch (eingabe) {
			case 1:
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			default:
				break;
			}
			eingabe = s.nextByte();
		}

	}
}
